<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fee"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_margin="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="104dp"
        android:text="@string/return_sub"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/meat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/meat"
        android:layout_width="100sp"
        android:layout_height="95dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="110dp"
        android:background="#0000"
        android:contentDescription="@string/meat"
        android:scaleType="centerInside"
        android:src="@drawable/meat"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintEnd_toStartOf="@+id/hikiniku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50sp"
        android:layout_height="45dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="77dp"
        android:background="#0000"
        android:contentDescription="@string/meat"
        android:scaleType="centerInside"
        android:src="@drawable/meat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meat" />


    <ImageButton
        android:id="@+id/hikiniku"
        android:layout_width="100sp"
        android:layout_height="95dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="111dp"
        android:background="#0000"
        android:contentDescription="@string/meat"
        android:scaleType="centerInside"
        android:src="@drawable/hikiniku"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/meat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton

        android:id="@+id/imageButton2"
        android:layout_width="50sp"
        android:layout_height="45dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="76dp"
        android:background="#0000"
        android:contentDescription="@string/hikiniku"
        android:scaleType="centerInside"
        android:src="@drawable/hikiniku"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView1"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/hikiniku" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="76dp"
        android:text="@string/sub"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="75dp"
        android:text="@string/sub2"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toBottomOf="@+id/hikiniku" />
</android.support.constraint.ConstraintLayout>
